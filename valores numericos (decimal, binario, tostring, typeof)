//atribuindo numeros
//exemplos

const peso1 = 1.0
const peso2 = Number('2.0') // tambem da certo (esse Number é uma função)

console.log(peso1, peso2) 
console.log(Number.isInteger(peso1)) //isInteger para saber se é um valor inteiro ou não
console.log(Number.isInteger(peso2))

const avaliacao1 = 9.871
const avaliacao2 = 6.871

const total = avaliacao1 * peso1 + avaliacao2 * peso2
const media = total / (peso1 + peso2)

console.log(media.toFixed(2)) //ToFixed para mostrar quantas casas decimais quero apresentar
console.log(media.toString()) //ToString como no c# para mostrar como se fosse uma string
console.log(media.toString(2))//transforma a media em um valor binario ao colocar o (2)
console.log(typeof media) // para saber o tipo(string ou inteiro etc...)
console.log(typeof Number) // mostrando o tipo que é o Number criado (é uma função)

//number = tipo de dado
//Number = função (repare no N maiusculo)
