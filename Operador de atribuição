const a = 7 
let b = 3 

b += a //esta fazendo uma atribuição aditiva (adição), ou seja esta acrescentando o valor a no valor b que vai dar 10
console.log(b)

b -= 4 //esta fazendo uma atribuição de subtração, ou seja b - 4
console.log(b)

b *= 2 //esta fazendo uma atribuiçao multiplicativa, ou seja b *2 
console.log(b)

b /= 2 //esta fazendo uma atribuição dividida, ou seja b / 2 
console.log(b)

b %= 2 //esta fazendo uma atribuição modular, ou seja b % 2 (que é o resto da divisão)
console.log(b) 
